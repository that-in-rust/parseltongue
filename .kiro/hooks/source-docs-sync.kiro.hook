{
  "enabled": true,
  "name": "Source to Docs Sync",
  "description": "On user trigger, analyzes recent changes in Rust sources/configs/docs and updates README or /docs folder for sync.",
  "version": "1",
  "when": {
    "type": "manual"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Analyze recent code changes (use git diff if available) and update documentation: README.md for overviews, /docs for details on new/existing code elements."
  }
}